{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./lib",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitThis": true,
    "removeComments": true,
    "strict": true,
    "stripInternal": true,
    "target": "esnext",
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "**/*.fixture.js",
    "**/*.mock.js",
    "**/*.spec.js",
    "**/*.test.jsx"
  ],
}
