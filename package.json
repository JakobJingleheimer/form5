{
  "name": "react-form5",
  "version": "1.0.0",
  "description": "A set of mostly unopinionated react components leveraging native APIs; supports controlled and uncontrolled state.",
  "type": "module",
  "directories": {
    "lib": "lib"
  },
  "exports": {
    ".": "./build/index.js",
    "./Button": "./lib/Button/index.jsx",
    "./FileInput": "./lib/FileInput/index.jsx",
    "./Input": "./lib/Input/index.jsx",
    "./Form": "./lib/Form.jsx",
    "./package.json": "./package.json"
  },
  "scripts": {
    "demo": "rm -rf ./docs/build/* && node ./build.js",
    "preversion": "npm run test:coverage",
    "test": "NODE_ENV=test NODE_OPTIONS='--no-warnings --loader=./loader.mjs' mocha './lib'",
    "test:coverage": "c8 --check-coverage npm test"
  },
  "repository": "github:JakobJingleheimer/react-form5",
  "keywords": [
    "a11y",
    "constraints validation api",
    "forms",
    "jsx",
    "react"
  ],
  "author": "Jacob Smith",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JakobJingleheimer/react-form5/issues"
  },
  "homepage": "https://github.com/JakobJingleheimer/react-form5#readme",
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "peerDependencies": {
    "classnames": "*",
    "prop-types": "*",
    "react": "~17.0.1",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "c8": "^7.10.0",
    "chai": "^4.3.0",
    "classnames": "*",
    "esbuild": "^0.14.2",
    "esbuild-css-modules-plugin": "^2.0.9",
    "mocha": "^9.1.3",
    "reset.css": "^2.0.2"
  },
  "engines": {
    "node": ">=13.2.0"
  },
  "c8": {
    "branches": 100,
    "exclude": [
      "loader.mjs",
      "*.setup.*",
      "**/*.fixture.js",
      "**/*.spec.{js,cjs,mjs,ts,tsx,jsx}"
    ]
  },
  "mocha": {
    "extension": [
      "spec.js"
    ],
    "file": [
      "./mocha.setup.js"
    ],
    "inline-diffs": true,
    "recursive": true
  }
}
